# Aktivera rewrite engine
RewriteEngine On

# Skicka alla requests till index.php (för routing)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Förhindra directory listing
Options -Indexes

# Neka åtkomst till känsliga filer
<FilesMatch "\.(ini|log|conf|env|json|lock|md)$">
    Deny from all
</FilesMatch>

# Blockera dolda filer
<FilesMatch "^\.">
    Deny from all
</FilesMatch>

# Säkerhetsheaders
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
</IfModule>
